@page
@model JokesWebApp.Views.EditModel

<h4>Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Joke.Id" />
            <div class="form-group">
                <label asp-for="Joke.JokeQuestion" class="control-label"></label>
                <input asp-for="Joke.JokeQuestion" class="form-control" />
                <span asp-validation-for="Joke.JokeQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joke.JokeAnswer" class="control-label"></label>
                <input asp-for="Joke.JokeAnswer" class="form-control" />
                <span asp-validation-for="Joke.JokeAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
